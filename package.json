{
  "name": "bununban",
  "version": "0.2.0",
  "type": "module",
  "module": "src/index.js",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development bun run ./src/index.js",
    "build": "bun run build:windows-x64 && bun run win-fix && bun run build:linux-x64 && bun run build:linux-x64-musl && bun run build:linux-arm64 && bun run build:linux-arm64-musl",
    "build:windows-x64": "bun build ./src/index.js --compile --target=bun-windows-x64 --minify --outfile dist/bununban-windows-x64 --windows-icon=\"./src/frontend/assets/favicon.ico\" --windows-hide-console --windows-title=bununban --windows-publisher=Greezor --windows-version=0.2.0 --windows-description=BunUnBan",
    "build:linux-x64": "bun build ./src/index.js --compile --target=bun-linux-x64 --minify --outfile dist/bununban-linux-x64",
    "build:linux-x64-musl": "bun build ./src/index.js --compile --target=bun-linux-x64-musl --minify --outfile dist/bununban-linux-x64-musl",
    "build:linux-arm64": "bun build ./src/index.js --compile --target=bun-linux-arm64 --minify --outfile dist/bununban-linux-arm64",
    "build:linux-arm64-musl": "bun build ./src/index.js --compile --target=bun-linux-arm64-musl --minify --outfile dist/bununban-linux-arm64-musl",
    "dockerize:arm64": "bun run build:linux-arm64 && docker run --name bununban --restart always --net=host --cap-add=NET_ADMIN -d -v ./dist:/bununban -w /bununban arm64v8/ubuntu:latest ./bununban-linux-arm64 --homedir=/bununban",
    "win-fix": "bun win-fix/modify-binary.js ./dist/bununban-windows-x64.exe"
  },
  "dependencies": {
    "@emotion/css": "^11.13.5",
    "@primeuix/themes": "^2.0.2",
    "@vueuse/core": "^14.1.0",
    "monaco-editor": "^0.55.1",
    "nanotar": "^0.2.0",
    "primevue": "^4.5.4",
    "string-argv": "^0.3.2",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@iconify-json/fa7-solid": "^1.2.3",
    "@iconify-json/material-symbols": "^1.2.50",
    "@iconify-json/svg-spinners": "^1.2.4",
    "@iconify/vue": "^5.0.0"
  }
}
